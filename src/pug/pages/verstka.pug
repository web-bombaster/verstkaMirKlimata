mixin linkToPage(link, title)
	p
		a(href=link+".html" target="_blank") #{title}

doctype html
html(lang="ru-RU")
	include ../includes/head
	body
		.container
			h1 Верстка сайта «Мир климата»:
			.index
				p.info Если страничка отображается криво, обновляем ее через CTRL + F5!
				+linkToPage('home','Главная')
				+linkToPage('catalog','Каталог товаров')
				+linkToPage('product-page','Детальная страница товара')
				+linkToPage('contacts','Контакты')
				+linkToPage('montage','Монтаж сплит систем')